ticker:
  source: coinmarketcap
  crypto: BTC
  fiat: GBP
  template: tmux

templates:
  tty: >
    {{ fiat.symbol }}/{{ crypto.symbol }}
    {{ "%.2f" | format(rate | float) }}
    ({{ "%.2f" | format(change | float) }}%)

  tmux: >
    {{ fiat.symbol }}/{{ crypto.symbol }}
    {{ "%.2f" | format(rate | float) }}
    {% if (change | float) > 0 %}#[fg=colour106]{{ "\u25b2" }}
    {% elif (change | float) < 0 %}#[fg=colour160]{{ "\u25bc" }}
    {% else %}{{ "\u2218" }}
    {% endif %}{{ "%.2f" | format(change | float | abs) }}%#[fg=colour3]

sources:
  coinmarketcap:
    url: https://api.coinmarketcap.com/v1/ticker/{{ crypto["api_path"] }}/?convert={{ fiat.symbol }}

    data:
      rate: >
        {{ json[0]["price_" + ( fiat.symbol | lower )] }}
      change: >
        {{ json[0]["percent_change_1h"] }}

    cryptos:
      BTC:
        api_path: bitcoin
      ETH:
        api_path: ethereum

    fiats:
      EUR: {}
      GBP: {}
      USD: {}
